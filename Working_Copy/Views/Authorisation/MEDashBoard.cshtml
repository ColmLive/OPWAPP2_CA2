@model OPWAPP2.Models.Authorisation

@{
    ViewBag.Title = "MEDashBoard";
 }

<body>
    <H2>MandE_Works User DashBoard </H2>
    @if (Session["UserName"] != null)
    {
        <text> Welcome M&E_Works Staff -  @Session["UserName"].ToString() </text>
    }

       <br />
    <h4>List of Tasks</h4> <img class="mySlides" src="~/Resources/Men at work cartoon.jpg" alt="AMD Image" style="width:50%">
    <hr />

    <div>
        <ol>
            <li>
                Create new DEASP Elective works requests for approval and funding <button type="button" onclick="location.href='@Url.Action("Create", "Work")'">New Works Request</button>
                <br />
                <br />
            </li>

            <li>

                List DEASP Elective works Awaiting approval <button type="button" onclick="location.href='@Url.Action("MEWorksforApproval","Work")'">New Works Request</button>
                <br /><br />
            </li>
            <li>
                List DEASP Elective works Awaiting Funding <button type="button" onclick="location.href='@Url.Action("MEWorksforFunding","Work")'">New Works Request</button>
                <br /><br />
            </li>
            <li>
                status of All DEASP Elective works requests <button type="button" onclick="location.href='@Url.Action("MEWorksStatus","Work")'">New Works Request</button>
                <br /><br />
            </li>
        </ol>
    </div>
</body>
