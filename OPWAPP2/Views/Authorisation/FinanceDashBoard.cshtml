@model OPWAPP2.Models.Authorisation

@{
    ViewBag.Title = "FinanceDashBoard";
}

<body>
    <H2> Finance User DashBoard </H2>


    @if (Session["UserName"] != null)
    {
        <text> Welcome Finance user -  @Session["UserName"].ToString() </text>

    }
    <br />
    <h4>List of Tasks</h4> <img class="mySlides" src="~/Resources/Funding.jpg" alt="AMD Image" style="width:50%">
    <hr />

    <div>
        <ol>
             <li>
                List DEASP Elective works Awaiting Funding <button type="button" onclick="location.href='@Url.Action("FinanceWorksforFunding","Work")'">New Works Request</button>
                <br /><br />
            </li>
            <li>

                List DEASP Elective works Awaiting approval <button type="button" onclick="location.href='@Url.Action("FinanceWorksforApproval","Work")'">New Works Request</button>
                <br /><br />
            </li>
            <li>
                status of All DEASP Elective works requests <button type="button" onclick="location.href='@Url.Action("DEASPWorksStatus","Work")'">New Works Request</button>
                <br /><br />
            </li>
        </ol>
    </div>
</body>
